{
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "prettier",
    "prettier/react"
  ],
  "plugins": [
    "chai-friendly",
    "mocha"
  ],
  "globals": {
    "process": true,
    "window": true
  },
  "rules": {
    "react/jsx-boolean-value": 0,
    "no-undefined": 0,
    "no-unused-expressions": 0,
    "chai-friendly/no-unused-expressions": 2,
    "mocha/no-exclusive-tests": "error"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
